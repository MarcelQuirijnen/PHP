{% extends "html/partials/base.html.twig" %}

{% block content %}
<div id="content">
    <div id="content-header">
        <h1 class="pull-left">Add User</h1>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div id="push"></div>
            <div class="span4 offset3 widget-box">
                <div class="widget-title"><h5>Enter New User Details:</h5></div>
                <div class="widget-content">
                    <div class="row-fluid">
                        <div class="span12">
                            <div id="message" class="text-center">{{ message2 }}</div><div id="push"></div>
                            <div id="push"></div>
                            <form id="NewUser" action="/admin/manage-users/new" method="POST">
                                <fieldset>
                                    <div class="control-group text-center">
                                        <div class="controls">
                                            <div class="input-prepend">
                                                <span class="add-on"><icon class="fa fa-user"></icon></span>
                                                <input style="height: 28px;" type="text" id="username" name="username" placeholder="Username" value="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-center control-group">
                                        <div class="controls">
                                            <div class="input-prepend">
                                                <span class="add-on"><icon class="fa fa-envelope"></icon></span>
                                                <input style="height: 28px;" type="text" id="email" name="email" placeholder="Email" value="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-center control-group">
                                        <div class="controls">
                                            <label><span>What role has this user?</span>
                                                    <select class="no-margin" id="role" name="role" >
                                                        {% for role in roles %}
                                                           <option value="{{ role }}">{{ role }}</option>
                                                        {% endfor %}
                                                    </select>
                                            </label>
                                        </div>
                                    </div>
                                    <div id="push"></div>
                                    <div>
                                        <br><div class="pull-left" id="message">{{ message }}</div>
                                        <span class="pull-right"><input type="submit" class="btn btn-inverse" value="Register" /></span>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}